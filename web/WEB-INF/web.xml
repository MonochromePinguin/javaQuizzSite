<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>org.monochrome.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/homePage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>quizzSelectionServlet</servlet-name>
        <servlet-class>org.monochrome.servlets.QuizzSelectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>quizzSelectionServlet</servlet-name>
        <url-pattern>/quizzList</url-pattern>
    </servlet-mapping>


    <!-- the controller in charge of « /homePage » is used for the site root -->
    <welcome-file-list>
        <welcome-file>homePage</welcome-file>
    </welcome-file-list>

</web-app>